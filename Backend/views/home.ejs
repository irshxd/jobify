<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <div class="nav">
        <div class="logo">Some logo</div>
        <div class="nav-list">
          <a href="/">Home</a>
          <a href="/employer">Job Posting</a>
          <a href="/employee">Job applications</a>
        </div>
          <a
            class="search1"
            href="/login"
          >Log In</a>
      </div>
      <div class="heroCounts">
      <h4 id="employerCount"></h4>
      <h4 id="employeeCount"></h4>
    </div>
    </div>
    <script>
      // Fetch the count values from the server
      fetch("/count-data")
        .then(response => response.json())
        .then(data => {
          // Update the HTML content with the received count values
          document.getElementById('employeeCount').innerText = `Job Application count: ${data.employeeCount}`;
          document.getElementById('employerCount').innerText = `Job Posting count: ${data.employerCount}`;
        })
        .catch(error => console.error('Error fetching count values:', error));
    </script>
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
