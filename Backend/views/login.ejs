<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <div class="nav">
        <div class="logo">Some logo</div>
        <div class="nav-list">
          <a href="/">Home</a>
          <a href="/employer">Job Posting</a>
          <a href="/employee">Job applications</a>
        </div>
        <a class="search1" href="/">Log out</a>
      </div>
      <div class="heroSec">
        <div class="heroP">
          Enter you mobile number to get logged in and redeem your
          <strong>reward points</strong>
        </div>
        <form method="post" class="heroForm">
          <div class="mb-2">
            <label for="exampleInputposition" class="heroSec"
              >MobileNumber</label
            >
            <input
              type="number"
              class="heroInput form-control"
              name="number"
            /><br />
            <button
              onclick="rewardFunc"
              type="submit"
              class="heroBtn btn btn-primary btn-submit heroBtn"
            >
              Submit
            </button>
          </div>
        </form>
        <div></div>
        <h4 id="applicationCount">Reward points earned: 0</h4>
      </div>
    </div>

    <script>
      fetch("/application-count")
        .then((response) => response.json())
        .then((data) => {
          document.getElementById("applicationCount").innerText =
            `Reward points earned: ${data.reward}`
              ? "Reward points earned : 0"
              : `Reward points earned: ${data.reward}`;
        })
        .catch((error) => console.error("Error fetching count values:", error));
      const rewardFunc = () => {
        window.location.href = "/login";
      };
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
